          </ul>
        </div>
        <!-- 主要类型 -->
        <div class="dropdown btn-group clearfix">
          <!-- 选单按钮 -->
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
          类型二 <i class="fa fa-angle-down"></i>
          </button>
          <!-- 选单内容：分类 -->
          <ul class="dropdown-menu">
            <li><a href="#">分类</a></li>
            <li><a href="#">分类</a></li>
            <li><a href="#">分类</a></li>
          </ul>
        </div>
        <!-- 主要类型 -->
        <div class="dropdown btn-group clearfix">
          <!-- 选单按钮 -->
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
          类型三 <i class="fa fa-angle-down"></i>
          </button>
          <!-- 选单内容：分类 -->
          <ul class="dropdown-menu">
            <li><a href="#">分类</a></li>
            <li><a href="#">分类</a></li>
            <li><a href="#">分类</a></li>
          </ul>
        </div>
        <!-- 品牌 -->
        <div class="dropdown btn-group clearfix">
          <!-- 选单按钮 -->
          <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
          品牌<i class="fa fa-angle-down"></i>
          </button>
          <!-- 选单内容：品牌 -->
          <ul class="dropdown-menu">
            <li><a href="#">品牌</a></li>
